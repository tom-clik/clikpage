<?xml version="1.0" encoding="UTF-8"?>
<stylesheet>

	<colors>
		<color name="textcolor" title="Main text color" value="#333333">
			<description></description>
		</color>
		<color name="myfavcolor" title="My favourite colour" value="#ff0000">
			<description></description>
		</color>
		<color name="panel-bg" title="Darker panel bg" value="#01798a">
			<description></description>
		</color>
		<color name="accent" title="Accent colour" value="#38bbcd">
			<description></description>
		</color>
		<color name="panel-text" title="Panel text" value="#ffffff">
			<description>To stand out against darker panel or accent</description>
		</color>
		<color name="light-panel-bg" title="Light panel packground" value="#eaeaea">
			<description></description>
		</color>
		<color name="linkcolor" title="Link color" value="#38bbcd">
			<description></description>
		</color>
		
	</colors>

	<media>
		<medium name="max" min="800" description="Full size only" />
		<medium name="mid" max="800"  description="Medium width for tablets"/>
		<medium name="mobile" max="600" description="mobile" />
		<medium name="print" media="print" description="Print only" />
	</media>

	<fonts>
		<font name="titlefont" value="Lato" />
		<font name="bodyfont" value="Open Sans" />
		<font name="test" face="broken" />
	</fonts>

	<layouts>

		<testlayout1>
			<inner-width>1090px</inner-width>
			<column-layout>S-M-X</column-layout>
			<columns-grid-gap>4</columns-grid-gap>
			<mid>
				<column-layout>S-MX</column-layout>
			</mid>
			<mobile>
				<column-layout>SMX</column-layout>
			</mobile>
			<row-layout>HF-T-C-F</row-layout>
		</testlayout1>
		
		<testlayout3>
			<column-layout>M</column-layout>
		</testlayout3>

		<testlayout4>
			<column-layout>S-M</column-layout>
			<mobile>
				<column-layout>SM</column-layout>
			</mobile>
		</testlayout4>
		
	</layouts>

	<content>

		<body>
			<color>textcolor</color>
			<font-family>bodyfont</font-family>
			<font-size>80%</font-size>
			<padding>0</padding>
			<mid>
				<font-size>70%</font-size>
			</mid>
			<mobile>
				<font-size>60%</font-size>
			</mobile>	
		</body>

		<sitetitle>
			<color>panel-text</color>		
			<margin>12 0 12 12</margin>
			<font-size>200%</font-size>
		</sitetitle>

		<header>
			<inner>
				<max-width>1200</max-width>
				<align>center</align>
				<padding>12</padding>
			</inner>
			<background>
				<color>panel-bg</color>
			</background>
			<grid>
				<gap>0</gap>
				<grid-template-columns>max-content auto</grid-template-columns>
			</grid>
			
			<mobile>
				<inner>
					<max-width>auto</max-width>
					<padding>4</padding>
				</inner>
				<grid>
					<grid>0</grid>
				</grid>
			</mobile>
		</header>

		<mainmenu>
			<menu>
				<orientation>vertical</orientation>
			</menu>
		</mainmenu>

		<topmenu>
			
			<menu>
				<flex>true</flex>
				<align>right</align>
				<min-height>100%</min-height>
				<link-color>panel-text</link-color>
				<hi><link-color>panel-text</link-color></hi>
				<hover><link-color>panel-text</link-color></hover>
			</menu>

			<height>100%</height>

			<item>
				<font-size>120%</font-size>
				<text-transform>uppercase</text-transform>
				<color>panel-text</color>
				<hover>
					<background><color>accent</color></background>
				</hover>
				<hi>
					<background><color>accent</color></background>
				</hi>
				<padding>0 20</padding>

			</item>
			
			<mid>
				<menu>
					<align>left</align>
					<height>auto</height>
				</menu>
				<height>auto</height>
			</mid>

			<mobile>
				<show>0</show>
			</mobile>			
		</topmenu>

		<footer>
			
			<inner>
				<max-width>1200</max-width>
				<align>center</align>
			</inner>
			
			<mobile>
				<grid>
					<grid>0</grid>
				</grid>
			</mobile>

		</footer>

		<contentfooter>

			<grid>
				<grid>1</grid>
				<columns>3</columns>
			</grid>
			
			<mid>
				<grid>
					<columns>2</columns>
				</grid>
			</mid>
			<mobile>
				<grid>
					<grid>0</grid>
				</grid>
			</mobile>
		</contentfooter>

		<topnav>
			
			<background>
				<color>light-panel-bg</color>
			</background>
		</topnav>

		<footermenu>
			
			<menu>
				<flex>true</flex>
			</menu>
			<border>
				<width>1</width>
				<color>myfavcolor</color>
			</border>
			<padding>2</padding>
			
			<mobile>
				<menu>
					<orientation>vertical</orientation>
				</menu>
			</mobile>

		</footermenu>

		<imagegrid>
			
			<imagegrid>
				<masonry>true</masonry>
				<popup>true</popup>
				<max-width>24%</max-width>
			</imagegrid>
			
			<mid>
				
				<imagegrid>
					<masonry>false</masonry>
					<max-width>33%</max-width>
				</imagegrid>
			</mid>
			<mobile>
				<imagegrid>
					<masonry>false</masonry>
					<max-width>49%</max-width>
				</imagegrid>
			</mobile>
		</imagegrid>

		<content>
			<font>Shuoldn't work</font>
			<color>No cascading</color>
			<padding>8 0</padding>
			<inner>
				<max-width>1200</max-width>
				<align>center</align>
			</inner>

		</content>

		<sectiontitle>
			<margin>0 0 1em 0</margin>
		</sectiontitle>

		<list>
			<articles>
				<image-align>right</image-align>
			</articles>
		</list>

		<sectionlist>
	
			<item>
				<padding>12px</padding>
				<background>
					<color>light-panel-bg</color>
				</background>
				<align>left</align>
				<imagewidth>33%</imagewidth>
				<margin>0 0 12px 0</margin>
				<hover>
					<color>panel-text</color>
					<background>
						<color>panel-bg</color>
					</background>
					<image>
						<padding>2px</padding>
						<border>
							<width>2px</width>
							<color>panel-text</color>
						</border>
					</image>
				</hover>
				<title>
					<text-transform>uppercase</text-transform>
				</title>
				<image>
					<padding>4px</padding>
				</image>

			</item>
			
		</sectionlist>
		
		<scheme-title>
			<color>accent</color>
			<font-family>bodyfont</font-family>
			<font-size>2.4em</font-size>
			<font-weight>300</font-weight>
		</scheme-title>

		<scheme-intros>
			<font-weight>bold</font-weight>
			<font-style>italic</font-style>
			<margin>0 0 1em 0</margin>
		</scheme-intros>

		<navbuttons>
			<grid>
				<columns>2</columns>
			</grid>
		</navbuttons>

		<scheme-button>
			<icon>
				<padding>4</padding>
				<background>
					<color>light-panel-bg</color>
				</background>
				<hover>
					<background>
						<color>panel-bg</color>
					</background>
				</hover>
			</icon>
		</scheme-button>

		<scheme-spanning>
			<inner>
				<max-width>1200px</max-width>
				<align>center</align>
				<padding>8px</padding>
			</inner>
			<mobile>
				<padding>4px</padding>
			</mobile>
		</scheme-spanning>

		<navnext>
			<button>
				<align>right</align>
				<shape>right_arrow</shape>
			</button>
		</navnext>

	</content>

</stylesheet>




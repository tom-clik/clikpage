<?xml version="1.0" encoding="UTF-8"?>
<stylesheet>

	<colors>
		<textcolor title="Main text color" value="#333333" />
		<myfavcolor title="My favourite colour" value="#ff0000" />
		<panel-bg name="panel-bg" title="Darker panel bg" value="#01798a" />
		<accent name="accent" title="Accent colour" value="#38bbcd" />
		<panel-text  title="Panel text" value="#ffffff">
			<description>To stand out against darker panel or accent</description>
		</panel-text>
		<light-panel-bg title="Light panel packground" value="#eaeaea" />
		<linkcolor title="Link color" value="#38bbcd" />
	</colors>

	<media>
		<max min="1200" description="Full size only" />
		<mid max="800"  description="Medium width for tablets"/>
		<mobile max="600" description="mobile" />
		<print media="print" description="Print only" />
	</media>

	<fonts>
		<bodyfont title="Body font" family="Open Sans" />
		<titlefont title="Title font" family="Lato" />
		<subtitlefont title="Sub Title font" family="--titlefont" description="Used by sub titles" />
		<test family="broken"  weights="" styles="" variants="" stretch="" />
	</fonts>

	<vars>
		<sitewidth title="Site width" description="Maximum width of site containers" value="1200px" />
		<sitepadding title="Site padding" description="Added to all spanning elements like header, footer" value="4px 6px" />
		<sitepaddingmobile title="Site padding (mobile)" description="Site padding in mobile" value="4px" />
	</vars>

	<layouts>

		<testlayout1>
			
			<scheme-spanning>
				<inner>
					<max-width>var(--sitewidth)</max-width>
					<align>center</align>
					<padding>var(--sitepadding)</padding>
					<mobile>
						<inner>
							<max-width>auto</max-width>
							<padding>var(--sitepaddingmobile)</padding>
						</inner>
					</mobile>
				</inner>
			</scheme-spanning>
		
			<body>
				<padding>0</padding>
			</body>
	
			<ubercontainer>
				<height>100%</height>
				<inner>
					<height>100%</height>
				</inner>
				<grid>
					<grid-mode>templateareas</grid-mode>
					<grid-template-areas>"topnav" "header" "content" "footer"</grid-template-areas>
					<grid-template-rows>min-content min-content 1fr min-content</grid-template-rows>
				</grid>
			</ubercontainer>

			<header>
				
				<grid>
					<grid-mode>fixedcols</grid-mode>
					<grid-template-columns>max-content 1fr</grid-template-columns>
				</grid>
				
				<mobile>
					<grid>
						<grid-mode>none</grid-mode>
					</grid>
				</mobile>
			</header>

			<content>
				<grid>
					<grid-mode>templateareas</grid-mode>
					<grid-template-areas>"contentheader" "contentwrap" "contentfooter"</grid-template-areas>
					<grid-template-rows>min-content 1fr min-content</grid-template-rows>
				</grid>
			</content>

			<contentfooter>
				<grid>
					<grid-mode>auto</grid-mode>
				</grid>
				<mobile>
					<grid>
						<grid-mode>none</grid-mode>
					</grid>
				</mobile>
			</contentfooter>

			<contentwrap>
				<grid>
					<grid-mode>templateareas</grid-mode>
					<grid-template-areas>"subcol maincol xcol"</grid-template-areas>
					<grid-template-columns>180px 1fr 140px</grid-template-columns>
				</grid>
				<mid>
					<grid>
						<grid-mode>templateareas</grid-mode>
						<grid-template-areas>"subcol maincol" "subcol xcol"</grid-template-areas>
						<grid-template-columns>180px 1fr</grid-template-columns>
					</grid>
				</mid>
				<mobile>
					<grid>
						<grid-mode>templateareas</grid-mode>
						<grid-template-areas>"maincol" "subcol"  "xcol"</grid-template-areas>
						<grid-template-columns>1fr</grid-template-columns>
					</grid>
				</mobile>
			</contentwrap>			

			<topnav>
				<inner>
					<max-width>1200</max-width>
					<align>center</align>
				</inner>
			</topnav>
			
			<footer>
				<grid>
					<grid-mode>fixedcols</grid-mode>
				</grid>

				<inner>
					<max-width>1200</max-width>
					<align>center</align>
				</inner>
				
				<mobile>
					<grid>
						<grid-mode>none</grid-mode>
					</grid>
				</mobile>

			</footer>

			<bottomnav>
				<position>fixed</position>
				<bottom>0</bottom>
				<inner>
					<max-width>1200</max-width>
					<align>center</align>
				</inner>
			</bottomnav>

		</testlayout1>
		
		<testlayout2>

			<content>
				<grid>
					<grid-mode>templateareas</grid-mode>
					<grid-template-areas>"contentheader" "contentwrap"</grid-template-areas>
					<grid-template-rows>min-content 1fr</grid-template-rows>
				</grid>
			</content>

			<maincol>
				<grid>
					<grid-mode>templateareas</grid-mode>
					<grid-template-areas>"maincol_top maincol_top" "maincol_right maincol_left" "maincol_bottom maincol_bottom"</grid-template-areas>
					<grid-template-rows>min-content min-content min-content</grid-template-rows>
				</grid>
				<mobile>
					<grid>
						<grid-mode>none</grid-mode>
					</grid>
				</mobile>
			</maincol>

			<contentfooter>
				<show>0</show>
			</contentfooter>
			
		</testlayout2>

		<testlayout3>

			<subcol>
				<show>0</show>
			</subcol>
			<xcol>
				<show>0</show>
			</xcol>
			<contentwrap>
				<grid>
					<grid-mode>templateareas</grid-mode>
					<grid-template-areas>"maincol"</grid-template-areas>
					<grid-template-rows>1fr</grid-template-rows>
				</grid>
			</contentwrap>

		</testlayout3>

		

		<subfolder1.testlayout4>
			
			<xcol>
				<show>0</show>
			</xcol>

			<contentwrap>
				<grid>
					<grid-mode>templateareas</grid-mode>
					<grid-template-areas>"subcol maincol"</grid-template-areas>
					<grid-template-rows>180px 1fr</grid-template-rows>
				</grid>
				<mobile>
					<grid>
						<grid-mode>templateareas</grid-mode>
						<grid-template-areas>"subcol" "maincol"</grid-template-areas>
						<grid-template-rows>1fr</grid-template-rows>
					</grid>
				</mobile>
			</contentwrap>		
		</subfolder1.testlayout4>
		
	</layouts>

	<content>

		<body>
			<color>textcolor</color>
			<font-family>bodyfont</font-family>
			<font-size>80%</font-size>
			<padding>0</padding>
			<mid>
				<font-size>70%</font-size>
			</mid>
			<mobile>
				<font-size>60%</font-size>
			</mobile>	
		</body>

		<sitetitle>
			<color>panel-text</color>		
			<margin>12 0 12 12</margin>
			<font-size>200%</font-size>
		</sitetitle>

		<header>
			
			<background>
				<color>panel-bg</color>
			</background>

		</header>

		<mainmenu>
			<menu>
				<orientation>vertical</orientation>
			</menu>
		</mainmenu>

		<topmenu>
			
			<menu>
				<flex>true</flex>
				<align>right</align>
				<min-height>100%</min-height>
				<link-color>panel-text</link-color>
				<hi><link-color>panel-text</link-color></hi>
				<hover><link-color>panel-text</link-color></hover>
			</menu>

			<height>100%</height>

			<item>
				<font-size>120%</font-size>
				<text-transform>uppercase</text-transform>
				<color>panel-text</color>
				<hover>
					<background><color>accent</color></background>
				</hover>
				<hi>
					<background><color>accent</color></background>
				</hi>
				<padding>0 20</padding>

			</item>
			
			<mid>
				<menu>
					<align>left</align>
					<height>auto</height>
				</menu>
				<height>auto</height>
			</mid>

			<mobile>
				<show>0</show>
			</mobile>			
		</topmenu>

		<topnav>
			
			<background>
				<color>light-panel-bg</color>
			</background>
		</topnav>

		<footermenu>
			
			<menu>
				<flex>true</flex>
			</menu>
			<border>
				<width>1</width>
				<color>myfavcolor</color>
			</border>
			<padding>2</padding>
			
			<mobile>
				<menu>
					<orientation>vertical</orientation>
				</menu>
			</mobile>

		</footermenu>

		<imagegrid>
			
				<masonry>true</masonry>
				<popup>true</popup>
				<grid-max-width>24%</grid-max-width>
			
			
			<mid>
				<masonry>false</masonry>
				<grid-max-width>33%</grid-max-width>
			</mid>
			<mobile>
				<masonry>false</masonry>
				<grid-max-width>49%</grid-max-width>
			</mobile>
		</imagegrid>

		<content>
			<font>Shuoldn't work</font>
			<color>No cascading</color>
			<padding>8 0</padding>
			<inner>
				<max-width>1200</max-width>
				<align>center</align>
			</inner>

		</content>

		<sectiontitle>
			<tag>h4</tag>
			<margin>0 0 1em 0</margin>
		</sectiontitle>

		<list>
			<item>
				<image-align>left</image-align>
			</item>
		</list>

		<sectionlist>
	
			<item>
				<padding>12px</padding>
				<background>
					<color>light-panel-bg</color>
				</background>
				<align>left</align>
				<imagewidth>33%</imagewidth>
				<margin>0 0 12px 0</margin>
				<hover>
					<color>panel-text</color>
					<background>
						<color>panel-bg</color>
					</background>
					<image>
						<padding>2px</padding>
						<border>
							<width>2px</width>
							<color>panel-text</color>
						</border>
					</image>
				</hover>
				<title>
					<text-transform>uppercase</text-transform>
				</title>
				<image>
					<padding>4px</padding>
				</image>

			</item>
			
		</sectionlist>
		
		<scheme-title>
			<color>accent</color>
			<font-family>bodyfont</font-family>
			<font-size>2.4em</font-size>
			<font-weight>300</font-weight>
		</scheme-title>

		<scheme-intros>
			<font-weight>bold</font-weight>
			<font-style>italic</font-style>
			<margin>0 0 1em 0</margin>
		</scheme-intros>

		<navbuttons>
			<grid>
				<columns>2</columns>
			</grid>
		</navbuttons>

		<scheme-button>
			<padding>4</padding>
			<background>
				<color>light-panel-bg</color>
			</background>
			<hover>
				<background>
					<color>panel-bg</color>
				</background>
			</hover>
		</scheme-button>

		<navnext>
			
			<show>0</show>
			
			<mobile>
				<position>absolute</position>
				<top>4px</top>
				<right>0</right>
				<show>1</show>
			</mobile>
			
			<button-align>flex-end</button-align>
			<shape>right_arrow</shape>
			
		</navnext>

		<hamburger>

			<show>0</show>
			<shape>menu</shape>
			
			<mobile>
				<position>absolute</position>
				<top>4px</top>
				<right>0</right>
				<show>1</show>
			</mobile>
			
		</hamburger>

	</content>

</stylesheet>




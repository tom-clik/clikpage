<?xml version="1.0" encoding="UTF-8"?>
<stylesheet>

	<colors>
		<color name="textcolor" title="Main text color" value="#333333">
			<description></description>
		</color>
		<color name="myfavcolor" title="My favourtie colour" value="#ff0000">
			<description></description>
		</color>
		<color name="panel-bg" title="Darker panel bg" value="#01798a">
			<description></description>
		</color>
		<color name="accent" title="Accent colour" value="#38bbcd">
			<description></description>
		</color>
		<color name="panel-text" title="Panel text" value="#ffffff">
			<description>To stand out against darker panel or accent</description>
		</color>
		<color name="light-panel-bg" title="Light panel packground" value="#eaeaea">
			<description></description>
		</color>
		
	</colors>

	<media>
		<medium name="main" />
		<medium name="mid" max="800" />
		<medium name="mobile" max="600" />
	</media>

	<fonts>
		<font name="titlefont" value="Lato" />
		<font name="bodyfont" value="Open Sans" />
		<font name="test" face="broken" />
	</fonts>

	<layouts>

		<testlayout>
			<sitewidth>1400px</sitewidth>
		</testlayout>
		
		<testlayout3>
			<subcolwidth>20%</subcolwidth>
			<xcolwidth>0%</xcolwidth>
		</testlayout3>
		
	</layouts>

	<content>

		<body>
			<main>
				<color>textcolor</color>
				<font-family>bodyfont</font-family>
				<font-size>80%</font-size>
				<padding>0</padding>
			</main>
		</body>

		<sitetitle>
			<main>
				<color>panel-text</color>		
				<margin>12 0 12 12</margin>
				<font-size>200%</font-size>
			</main>
		</sitetitle>

		<header>
			<main>
				<inner>
					<max-width>1200</max-width>
					<align>center</align>
				</inner>
				<background>
					<color>panel-bg</color>
				</background>
				<grid>
					<gap>0</gap>
					<grid-template-columns>max-content auto</grid-template-columns>
				</grid>
			</main>
			<mobile>
				<grid>
					<grid>0</grid>
				</grid>
			</mobile>
		</header>

		<mainmenu>

			<main>
				<menu>
					<orientation>vertical</orientation>
				</menu>
			</main>	

		</mainmenu>

		<topmenu>
			<main>
				<menu>
					<flex>true</flex>
					<align>right</align>
					<min-height>100%</min-height>
				</menu>
				
				<height>100%</height>

				<item>
					<font-size>120%</font-size>
					<text-transform>uppercase</text-transform>
					<color>panel-text</color>
					<hover>
						<background><color>accent</color></background>
					</hover>
					<hi>
						<background><color>accent</color></background>
					</hi>
					<padding>0 20</padding>

				</item>
			</main>
			<mid>
				<menu>
					<align>left</align>
					<height>auto</height>
				</menu>
				<height>auto</height>
			</mid>

			<mobile>
				<show>0</show>
			</mobile>			
		</topmenu>

		<footer>
			<main>
				<inner>
					<max-width>1200</max-width>
					<align>center</align>
				</inner>
			</main>
			<mobile>
				<grid>
					<grid>0</grid>
				</grid>
			</mobile>
		</footer>

		<topnav>
			<main>
				<background>
					<color>light-panel-bg</color>
				</background>
				<padding>8 0</padding>
				<inner>
					<max-width>1200</max-width>
					<align>center</align>
				</inner>
			</main>
		</topnav>

		<footermenu>
			<main>
				<menu>
					<flex>true</flex>
				</menu>
				<border>
					<width>1</width>
					<color>myfavcolor</color>
				</border>
				<padding>2</padding>

			</main>
			
			<mobile>
				<menu>
					<orientation>vertical</orientation>
				</menu>
			</mobile>

		</footermenu>

		<imagegrid>
			<main>
				<masonry>true</masonry>
				<imagegrid>
					<max-width>160px</max-width>
				</imagegrid>
			</main>
			<mid>
				<masonry>false</masonry>
				<imagegrid>
					<max-width>220px</max-width>
				</imagegrid>
			</mid>
			<mobile>
				<masonry>false</masonry>
				<imagegrid>
					<max-width>260px</max-width>
				</imagegrid>
			</mobile>
		</imagegrid>

		<content>

			<main>
				<padding>8 0</padding>
				<inner>
					<max-width>1200</max-width>
					<align>center</align>
				</inner>
			</main>

		</content>

		<sectiontitle>
			<main>
				<margin>0 0 1em 0</margin>
			</main>
		</sectiontitle>
		<scheme-title>
			
			<main>
				<color>accent</color>
				<font-family>bodyfont</font-family>
				<font-size>2.4em</font-size>
				<font-weight>300</font-weight>
			</main>

		</scheme-title>

		<scheme-intros>
			
			<main>
				<font-weight>bold</font-weight>
				<font-style>italic</font-style>
				<margin>0 0 1em 0</margin>
			</main>

		</scheme-intros>

	</content>



</stylesheet>



